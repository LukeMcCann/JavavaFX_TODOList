<!--To use the java graphics repository the JAR must be added to dependencies as well as module-info-->
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="com.planetdebug.bookingsystem.MainController" xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="0" onKeyReleased="#handleKeyReleased"/>
    <Button fx:id="helloButton" text="Hello" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#onButtonClicked"/>
    <Button fx:id="goodbyeButton" text="Goodbye" GridPane.rowIndex="0" GridPane.columnIndex="2" onAction="#onButtonClicked"/>
</GridPane>